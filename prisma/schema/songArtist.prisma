// Artist-Song relationship (many-to-many)
model SongArtist {
  id         String   @id @default(uuid())
  song_id   String
  artist_id  String
  role       String   @default("primary") @db.VarChar(50)
  created_at DateTime @default(now())

  // Relations
  song  Song  @relation(fields: [song_id], references: [id], onDelete: Cascade)
  artist Artist @relation(fields: [artist_id], references: [id], onDelete: Cascade)

  @@unique([song_id, artist_id, role])
  @@map("song_artists")
  @@index([song_id])
  @@index([artist_id])
}